md-toolbar(md-scroll-shrink='' ng-if='true')
  .md-toolbar-tools
    h3
      span NG-ESHOP
    form(ng-submit='$event.preventDefault()' layout='row')
      md-autocomplete(
      ng-disabled='vm.isDisabled'
      md-no-cache='false'
      md-selected-item='vm.selectedItem'
      md-search-text='vm.searchText'
      md-selected-item-change='vm.selectedItemChange(item)'
      md-items='item in vm.querySearch(vm.searchText)'
      md-item-text='item.title'
      md-min-length='1'
      placeholder='Search...'
      md-menu-class='autocomplete-custom-template')
        md-item-template
          span.item-title
            span  {{item.title | uppercase}} 
          span.item-metadata
            span.item-metastat {{item.category.title | uppercase}} > 
            span.item-metastat {{item.subcategory.title | uppercase}}
      md-button.md-primary(type='button' ng-disabled='!vm.searchText' ng-click='vm.search(vm.searchText)') Search